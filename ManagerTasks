const tasks = [
  { id: 1, description: "Study JavaScript", completed: true, priority: 3 },
  { id: 2, description: "Do exercises", completed: false, priority: 2 },
  { id: 3, description: "Read documentation", completed: false, priority: 1 },
  { id: 4, description: "Create project", completed: true, priority: 3 },
  { id: 5, description: "Review concepts", completed: false, priority: 2 }
];

function createTaskManager(initialTasks) {
  let tasks = [...initialTasks];

  return {
    getCompletedTasks: () => tasks.filter(task => task.completed),

    countPendingTasks: () => tasks.reduce((total, task) => task.completed ? total : total + 1, 0),

    findTaskById: (id) => tasks.find(task => task.id === id),

    hasHighPriorityTask: () => tasks.some(task => task.priority === 1),

    areAllTasksCompleted: () => tasks.every(task => task.completed),
    
    updateDescriptions: () => tasks.map(task => ({ ...task, description: task.description.toUpperCase() }))
  };
}

const taskManager = createTaskManager(tasks);